<Page x:Class="EazyRecipez.BreakfastPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EazyRecipez"
      mc:Ignorable="d" 

      Title="BreakfastPage" Height="800" Width="390">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="359*"/>
            <ColumnDefinition Width="31*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="2">
            <TextBlock Text="Breakfast" HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Margin="0,10,0,0" FontSize="34" FontWeight="Bold"/>
        </StackPanel>


        <ScrollViewer HorizontalScrollBarVisibility="Hidden" Margin="20,0" Width="350" VerticalScrollBarVisibility="Auto" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" Grid.ColumnSpan="2" >
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,95,0,0" HorizontalAlignment="Center"  >
                <Button x:Name="Breakfast" Margin="0,5,10,5" Grid.Column="0" Content=" Breakfast " Width="Auto" Height="Auto" FontSize="16" Click ="Breakfast_Click" IsEnabled="False">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Margin="10,5,10,5" Grid.Column="1" Content=" Lunch "  Width="Auto" Height="Auto" FontSize="16" Click ="Lunch_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Margin="10,5,10,5" Grid.Column="2" Content=" Dinner "  Width="Auto" Height="Auto" FontSize="16" Click="Dinner_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Margin="10,5,10,5" Grid.Column="3" Content=" Dessert "  Width="Auto" Height="Auto" FontSize="16" Click="Dessert_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Margin="10,5,10,5" Grid.Column="3" Content=" Dessert "  Width="Auto" Height="Auto" FontSize="16" Click="Dessert_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="7"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </ScrollViewer>

        <TextBox HorizontalAlignment="Center" Height="25" Margin="50,65,19,0" FontSize="16" TextWrapping="Wrap" Text="Search for recipes..." VerticalAlignment="Top" Width="290" Background="{x:Null}" TextChanged="TextBox_TextChanged"/>
        <Image Height="20"  Source="Images/search_icon.png" Stretch="Fill"  Width="20"  Margin="21,68,318,712"/>

        <Grid HorizontalAlignment="Left" Height="62" Margin="10,10,-10,0" VerticalAlignment="Top" Width="390" Grid.ColumnSpan="2"/>
        <ScrollViewer VerticalScrollBarVisibility="Hidden"  HorizontalAlignment="Left" Height="565" Margin="0,135,0,0" VerticalAlignment="Top" Width="375" Grid.ColumnSpan="2" >
            <Border Padding="0" CornerRadius="6" BorderBrush="Gray" Background="#F8F8F8" BorderThickness="1" DockPanel.Dock="Top" Width="350" Height="Auto">
                <StackPanel Margin="10">

                    <StackPanel Orientation="Horizontal">
                        <Image Source="blueberry.png" Width="91" Height="89"/>
                        <StackPanel>
                            <Label Content="Blueberry muffins" Width="189" FontSize="17" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆☆ (30 reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="20 mins" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>

                        </StackPanel>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/pumpkin.jpg" Width="90" Height="80"/>
                        <StackPanel>
                            <Label Content="Pumpkin Chocolate chip Bread" Width="189" FontSize="12.5" FontWeight="Bold"/>
                            <Label Content="☆☆☆ (40 reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="45 mins" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>
                        </StackPanel>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/omelette.jpg" Width="91" Height="90"/>
                        <StackPanel>
                            <Label Content="Classic Omelet and Greens" Width="189" FontSize="14.5" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆ (5 reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="15 mins" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>
                        </StackPanel>
                    </StackPanel>



                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/frenchtoast.jpg" Width="94" Height="82"/>
                        <StackPanel>
                            <Label Content="French Toast" Width="189" FontSize="17" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆ (16 reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="25 mins" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>
                        </StackPanel>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/burrito.jpg" Width="91" Height="74"/>
                        <StackPanel>
                            <Label Content="Breakfast Burrito" Width="189" FontSize="17" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆☆ (63 reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="20 mins" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>
                        </StackPanel>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images\banana.jpg" Width="91" Height="70"/>
                        <StackPanel>
                            <Label Content="Banana Egg Pancakes" Width="189" FontSize="17" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆ (24 reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="25 mins" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>
                        </StackPanel>
                    </StackPanel>


                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/icons8-pancake-96.png" Width="Auto"/>
                        <StackPanel>
                            <Label Content="Fruit Bowl" Width="189" FontSize="17" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆☆ (# of reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="Estimated time to complete" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/icons8-pancake-96.png" Width="Auto"/>
                        <StackPanel>
                            <Label Content="Recipe Name" Width="189" FontSize="17" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆☆ (# of reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="Estimated time to complete" Width="190"/>
                            <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <Image Source="Images/icons8-pancake-96.png" Width="Auto"/>
                        <StackPanel>
                            <Label Content="Recipe Name" Width="189" FontSize="17" FontWeight="Bold"/>
                            <Label Content="☆☆☆☆☆ (# of reviews)" Width="190" FontSize="15" FontWeight="Bold"/>
                            <Label Content="Estimated time to complete" Width="190"/>

                        </StackPanel>
                    </StackPanel>

                    <Frame x:Name="Main" NavigationUIVisibility="Hidden"></Frame>
                </StackPanel>
            </Border>
        </ScrollViewer>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="99"  VerticalAlignment="Bottom" Width="400" Grid.ColumnSpan="2" Margin="-5,0"/>
        <StackPanel Margin="-5" Grid.ColumnSpan="2">

            <Canvas>

                <Image Source="Images/icons8-plus-50.png" Stretch="Fill" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="170" Canvas.Top="714"/>
                <Image Source="Images/icons8-user-50.png" Stretch="Fill" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Right="40" Canvas.Top="713" Canvas.Left="312"/>
                <Image Source="Images/icons8-home-50.png" Stretch="Fill" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Canvas.Left="40" Canvas.Top="715"/>
                <TextBlock HorizontalAlignment="Left" Height="15" Margin="38,744,0,0" TextWrapping="Wrap" Text="Home" VerticalAlignment="Top" Width="36"/>
                <TextBlock HorizontalAlignment="Left" Height="15" Margin="167,744,0,0" TextWrapping="Wrap" Text="Create" VerticalAlignment="Top" Width="36"/>
                <TextBlock HorizontalAlignment="Left" Height="15" Margin="310,745,0,0" TextWrapping="Wrap" Text="Profile" VerticalAlignment="Top" Width="36"/>

                <Button x:Name="HomeButton" Content="Button" HorizontalAlignment="Left" Margin="30,705,0,0" VerticalAlignment="Top" Width="50" Height="50" Opacity="0" Click="Home_Click"/>

                <Button x:Name="ProfileButton" Content="Button" HorizontalAlignment="Left" Margin="300,705,0,0" VerticalAlignment="Top" Width="50" Height="50" Opacity="0" Click="Profile_Click"/>

                <Button x:Name="CreateButton" Content="Button" HorizontalAlignment="Left" Margin="160,705,0,0" VerticalAlignment="Top" Width="50" Height="50" Opacity="0" Click="Create_Click"/>
            </Canvas>


        </StackPanel>



    </Grid>
</Page>

