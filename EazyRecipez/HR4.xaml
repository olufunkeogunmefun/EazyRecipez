<Page x:Class="EazyRecipez.BR1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EazyRecipez"
      mc:Ignorable="d" 

      Title="BR1" Height="800" Width="390">

    <Grid Background="White">
        <StackPanel Orientation="Horizontal">
            <TextBlock  Height="Auto" TextWrapping="Wrap"  Text="➜" Width="Auto" Margin="25,10,0,0" FontSize="34" MouseLeftButtonUp="BackToPrevPage">

                <TextBlock.LayoutTransform>
                    <ScaleTransform ScaleX="-1.0"/>
                </TextBlock.LayoutTransform>

            </TextBlock>
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Cinammon Rolls" HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Margin="53,15,28,0" FontSize="23" FontWeight="Bold"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Hidden"  HorizontalAlignment="Left" Height="645" Margin="0,55,0,0" VerticalAlignment="Top" Width="375" >
            <StackPanel >

                <ScrollViewer HorizontalScrollBarVisibility="Hidden" Margin="100,0,100,0" VerticalScrollBarVisibility="Auto" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel" >
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Image Source="Images/cinammon.jpg" Width="175" Height="160"/>
                        <Image Source="Images/icons8-pancake-96.png" Width="175"/>
                        <Image Source="Images/icons8-pancake-96.png" Width="175"/>
                    </StackPanel>
                </ScrollViewer>

                <Border Margin="0,0,0,0"  CornerRadius="6" BorderBrush="Gray" Background="#F8F8F8" BorderThickness="1" DockPanel.Dock="Top" Width="330" Height="Auto">
                    <StackPanel HorizontalAlignment="Center" >
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Margin="0,0,0,0" FontSize="16"><Bold><Run Text="Category:"/></Bold><Run Text=" "/><Run Text="None"/></TextBlock>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Margin="20,0,0,0" FontSize="16"><Bold><Run Text="Time:"/></Bold><Run Text=" "/><Run Text="30"/><Run Text=" mins"/></TextBlock>

                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Margin="0,5,0,0" FontSize="16"><Bold><Run Text="Author:"/></Bold><Run Text=" "/><Run Text="clairo"/></TextBlock>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Height="Auto" Margin="20,5,0,0" FontSize="16" FontWeight="Bold"><Run Text="☆☆☆☆ "/><Run Text="("/><Run Text="70 "/><Run Text="reviews)"/></TextBlock>

                        </StackPanel>
                    </StackPanel>
                </Border>

                <Label Content="Description" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" Margin="10,0,0,0" FontSize="28" FontWeight="Bold"/>

                <Border Margin="0,0,0,0"  CornerRadius="6" BorderBrush="Gray" Background="#F8F8F8" BorderThickness="1" DockPanel.Dock="Top" Width="330" Height="Auto">

                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="subHeaderText" FontSize="14" TextWrapping="Wrap" Foreground="Black" Margin="10" Text="I have tried numerous overnight Cinnamon Rolls recipes that all claim to be the best, but none have wooed me quite like this one. It's adapted from a legendary Cinnamon Roll recipe by Zingerman's Bakehouse."/>
                    </StackPanel>
                </Border>
                <Label Content="Ingredients" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" Margin="10,0,0,0" FontSize="28" FontWeight="Bold"/>

                <Border Margin="0,0,0,0"  CornerRadius="6" BorderBrush="Gray" Background="#F8F8F8" BorderThickness="1" DockPanel.Dock="Top" Width="330" Height="Auto">

                    <StackPanel>

                        <TextBlock  TextWrapping="Wrap" FontSize="14" Margin="10"><Bold><Run Text="•"/></Bold><Run Text=" 1/2 cup whole milk warmed to 110F"/><Run Text=","/><LineBreak/><Bold><Run Text="•"/></Bold><Run Text=" 1 tsp instant yeast,"/><LineBreak/><Bold><Run Text="•"/></Bold><Run Text=" 5 oz bread flour, by weight (1 cup, measured),"/><LineBreak/><Bold><Run Text="•"/></Bold><Run Text=" 1"/><Run Text=" "/><Run Text="cup unsalted butter "/><Run Text="("/><Run Text="room temperature"/><Run Text=")"/><Run Text=","/><LineBreak/><Span FontWeight="Bold"><Run Text="•"/></Span><Run Text=" 1/4 cup granulated sugar"/><Run Text=" &amp; "/><Run Text="1/4 cup brown sugar (light or dark, or even better, use Muscovado),"/><LineBreak/><Span FontWeight="Bold"><Run Text="•"/></Span><Run Text=" "/><Run Text=" 3/8"/><Run Text=" tsp kosher salt"/><Run Text=","/><LineBreak/><Span FontWeight="Bold"><Run Text="•"/></Span><Run Text=" "/><Run Text=" 2 large eggs "/><Run Text="(room temperature),"/><LineBreak/><Span FontWeight="Bold"><Run Text="•"/></Span><Run Text=" "/><Run Text=" 7.5 oz bread flour, by weight (1.5 cups, measured)"/><Run Text=","/><LineBreak/><Run FontWeight="Bold" Text="•"/><Run FontWeight="Bold" Text=" "/><Run Text="1 tbsp ground cinnamon"/><Run Text=","/><LineBreak/><Run FontWeight="Bold" Text="•"/><Run FontWeight="Bold" Text=" "/><Run Text="1 cup confectioner's sugar"/><LineBreak/><Run FontWeight="Bold" Text="•"/><Run FontWeight="Bold" Text=" "/><Run FontWeight="Bold" Text=" "/><Run Text="1 tbsp orange juice (preferably freshly squeezed)"/><LineBreak/><Run FontWeight="Bold" Text="•"/><Run FontWeight="Bold" Text=" "/><Run Text="1/4 tsp orange extract"/></TextBlock>
                    </StackPanel>
                </Border>
                <Label Content="Instructions                    ➜" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" Margin="10,0,0,0" FontSize="28" FontWeight="Bold"/>

                <Border Margin="0,0,0,0"  CornerRadius="6" BorderBrush="Gray" Background="#F8F8F8" BorderThickness="1" DockPanel.Dock="Top" Width="330" Height="Auto">
                    <StackPanel>
                        <TextBlock TextWrapping="Wrap" FontSize="14" Margin="10" ><Bold><Run Text="1."/></Bold><Run Text="  Combine tapioca, milk, and salt in 1 1/2 quart pan on medium high heat. Stir while bringing to a bare simmer. Lower the heat and cook uncovered, at the lowest possible heat, adding sugar gradually, until the tapioca pearls have plumped up and thickened."/><Run Text=" Stir occasionally."/><LineBreak/><Bold><Run Text="2."/></Bold><Run Text=" Beat eggs in a separate bowl. Whisk in some of the hot tapioca very slowly to equalize the temperature of the two mixtures (to avoid curdling)."/><LineBreak/><Run FontWeight="Bold" Text="3."/><Run FontWeight="Bold" Text=" "/><Run Text="I"/><Run Text="ncrease the heat to medium and stir for several minutes until you get a thick pudding consistency. Do not let the mixture boil or the tapioca egg custard will curdle. Cool 15 minutes. Stir in vanilla. Serve either warm or chilled."/></TextBlock>
                    </StackPanel>
                </Border>

                <StackPanel Margin="0,10,0,0">
                    <Label Content="Comments                    ➜" HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto" Width="Auto" Margin="10,0,0,0" FontSize="28" FontWeight="Bold"/>
                    <TextBox HorizontalAlignment="Center" Height="25" Margin="0,0,0,10" FontSize="16" TextWrapping="Wrap" Text="Add a comment..." VerticalAlignment="Top" Width="330" Background="{x:Null}"/>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden"  HorizontalAlignment="Left" Height="250" Margin="0,0,0,0" VerticalAlignment="Top" Width="375" >

                        <Border Padding="0" CornerRadius="6" BorderBrush="Gray" Background="#F8F8F8" BorderThickness="1" DockPanel.Dock="Top" Width="330" Height="Auto">

                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Margin="0,-25,0,0" Source="Images/icons8-pancake-96.png" Width="30"/>
                                    <StackPanel>
                                        <Label Content="Username" Width="189" FontSize="18" FontWeight="Bold"/>
                                        <Label Content="Awesome Recipe!" Width="190" FontSize="15" FontWeight="Normal"/>

                                        <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>

                                    </StackPanel>
                                </StackPanel>


                                <StackPanel Orientation="Horizontal">
                                    <Image Margin="0,-25,0,0" Source="Images/icons8-taco-96.png" Width="30"/>
                                    <StackPanel>
                                        <Label Content="Username" Width="189" FontSize="18" FontWeight="Bold"/>
                                        <Label Content="Awesome Recipe!" Width="190" FontSize="15" FontWeight="Normal"/>
                                        <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="1"/>

                                    </StackPanel>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                    <Image Margin="0,-25,0,0" Source="Images/icons8-taco-96.png" Width="30"/>
                                    <StackPanel>
                                        <Label Content="Username" Width="189" FontSize="18" FontWeight="Bold"/>
                                        <Label Content="Awesome Recipe!" Width="190" FontSize="15" FontWeight="Normal"/>
                                        <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="Auto"/>

                                    </StackPanel>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Image Margin="0,-25,0,0" Source="Images/icons8-taco-96.png" Width="30"/>
                                    <StackPanel>
                                        <Label Content="Username" Width="189" FontSize="18" FontWeight="Bold"/>
                                        <Label Content="Awesome Recipe!" Width="190" FontSize="15" FontWeight="Normal"/>
                                        <Rectangle  HorizontalAlignment="Stretch"  VerticalAlignment="Center" Fill="#FFBFBFBF" Height="Auto"/>

                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </StackPanel>
            </StackPanel>

        </ScrollViewer>

        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="99"  VerticalAlignment="Bottom" Width="400" Margin="-5,0"/>
        <StackPanel Margin="-5" Height="810" VerticalAlignment="Bottom">

            <Canvas>

                <Image Source="Images/icons8-plus-50.png" Stretch="Fill" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Left="170" Canvas.Top="714"/>
                <Image Source="Images/icons8-user-50.png" Stretch="Fill" Width="30" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Canvas.Right="40" Canvas.Top="713" Canvas.Left="312"/>
                <Image Source="Images/icons8-home-50.png" Stretch="Fill" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Center" Canvas.Left="40" Canvas.Top="715"/>
                <TextBlock HorizontalAlignment="Left" Height="15" Margin="38,744,0,0" TextWrapping="Wrap" Text="Home" VerticalAlignment="Top" Width="36"/>
                <TextBlock HorizontalAlignment="Left" Height="15" Margin="167,744,0,0" TextWrapping="Wrap" Text="Create" VerticalAlignment="Top" Width="36"/>
                <TextBlock HorizontalAlignment="Left" Height="15" Margin="310,745,0,0" TextWrapping="Wrap" Text="Profile" VerticalAlignment="Top" Width="36"/>

                <Button x:Name="HomeButton" Content="Button" HorizontalAlignment="Left" Margin="30,705,0,0" VerticalAlignment="Top" Width="50" Height="50" Opacity="0" Click="Home_Click"/>

                <Button x:Name="ProfileButton" Content="Button" HorizontalAlignment="Left" Margin="300,705,0,0" VerticalAlignment="Top" Width="50" Height="50" Opacity="0" Click="Profile_Click"/>

                <Button x:Name="CreateButton" Content="Button" HorizontalAlignment="Left" Margin="160,705,0,0" VerticalAlignment="Top" Width="50" Height="50" Opacity="0" Click="Create_Click"/>

            </Canvas>


        </StackPanel>






    </Grid>
</Page>